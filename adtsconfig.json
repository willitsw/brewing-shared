{
    "compilerOptions": {
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist/ts/",
        "outDir": "dist/ts/",
        "noErrorTruncation": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2019",
            "dom"
        ],
        "sourceMap": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src",
    ]
}